root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
max_line_length = 120

[*.rs]
indent_size = 4
max_line_length = 100

[*.toml]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2
max_line_length = 200

[*.md]
# Actually one sentence per-line, but that means a hardcoded limit doesn't make sense.
max_line_length = 9999

[*.{js,mjs,cjs,ts}]
indent_size = 2

[*.json]
indent_size = 2

[Justfile]
indent_size = 4

[.gitmodules]
indent_style = tab
