root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space

[*.rs]
indent_size = 4
max_line_length = 100

[*.toml]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2
max_line_length = 200

[*.{js,mjs,cjs,ts}]
indent_size = 2
max_line_length = 120

[*.json]
indent_size = 2
max_line_length = 120

[Justfile]
indent_size = 4
max_line_length = 120

[.gitmodules]
indent_style = tab
